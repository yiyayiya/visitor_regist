/* pages/index/index.wxss */
.container {
  height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  background-color: white;
  padding: 20px;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.header-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px 20px 20px 20px;
}

.subtitle {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 40px;
}

/* 定位图标 */
.location-icon {
  margin-bottom: 40px;
}

.icon-circle {
  width: 80px;
  height: 80px;
  background-color: #6B7280;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.icon-location {
  font-size: 28px;
  color: white;
}

/* 物业信息 */
.property-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.address-info {
  font-size: 14px;
  color: #666;
  margin-bottom: 40px;
}

/* 紧凑的用户信息填写区域 */
.user-info-compact {
  width: 100%;
  max-width: 320px;
  padding: 20px;
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  margin-bottom: 30px;
}

.user-info-row {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 15px;
}

/* 紧凑头像样式 */
.avatar-section-compact {
  flex-shrink: 0;
}

.avatar-wrapper-compact {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
}

.avatar-wrapper-compact::after {
  border: none;
}

.avatar-compact {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 2px solid #4ECDC4;
  background-color: #f5f5f5;
}

/* 紧凑昵称输入样式 */
.nickname-section-compact {
  flex: 1;
}

.nickname-input-compact {
  width: 100%;
  height: 40px;
  border: 1px solid #e0e0e0;
  border-radius: 20px;
  padding: 0 15px;
  font-size: 14px;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.nickname-input-compact:focus {
  border-color: #4ECDC4;
  background-color: white;
  box-shadow: 0 0 0 2px rgba(78, 205, 196, 0.2);
}

/* 提示文字 */
.user-info-tips {
  text-align: center;
}

.tip-text {
  font-size: 12px;
  color: #999;
}

/* 底部按钮区域 */
.bottom-section {
  padding: 0 20px 20px 20px;
}

.register-btn {
  width: 100%;
  background-color: #4ECDC4;
  color: white;
  font-size: 16px;
  font-weight: bold;
  padding: 15px;
  border-radius: 25px;
  border: none;
  box-shadow: 0 4px 12px rgba(78, 205, 196, 0.3);
  transition: all 0.3s ease;
}

.register-btn:active {
  transform: translateY(1px);
  box-shadow: 0 2px 8px rgba(78, 205, 196, 0.4);
}

.register-btn::after {
  border: none;
}

/* 按钮禁用状态 */
.register-btn:disabled {
  background-color: #ccc !important;
  color: #999 !important;
  box-shadow: none !important;
  transform: none !important;
}

/* 管理员入口样式 */
.admin-entrance {
  padding: 20px;
  text-align: center;
  border-top: 1px solid #eee;
  background-color: white;
}

.admin-link {
  color: #888;
  font-size: 14px;
  text-decoration: underline;
}
