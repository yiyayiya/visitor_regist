.search-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-modal-content {
  background-color: white;
  margin: 0 30px;
  border-radius: 15px;
  width: calc(100% - 60px);
  max-width: 400px;
  padding: 0;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.search-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 25px;
  border-bottom: 1px solid #f0f0f0;
  background-color: #f8f9fa;
}

.search-modal-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.search-modal-close {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 15px;
  background-color: #e9ecef;
  font-size: 16px;
  color: #666;
}

.search-input-wrapper {
  padding: 25px;
}

.search-input {
  width: 100%;
  padding: 0 20px;
  border: 2px solid #e9ecef;
  border-radius: 25px;
  font-size: 18px;
  background-color: #f8f9fa;
  box-sizing: border-box;
  height: 56px;
  line-height: normal;
  text-align: left;
}

.search-input:focus {
  border-color: #007aff;
  background-color: white;
}

.search-modal-actions {
  display: flex;
  padding: 20px 25px;
  gap: 15px;
  background-color: #f8f9fa;
  justify-content: center;
}

.search-btn-secondary {
  width: 50%;
  max-width: 100px;
  padding: 8px;
  border: 2px solid #6c757d;
  border-radius: 8px;
  background-color: white;
  color: #6c757d;
  font-size: 14px;
}

.search-btn-primary {
  width: 50%;
  max-width: 100px;
  padding: 8px;
  border: none;
  border-radius: 8px;
  background-color: #007aff;
  color: white;
  font-size: 14px;
}

