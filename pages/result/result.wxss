/* pages/result/result.wxss */
.container {
  height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 主要内容区域 */
.main-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40px 20px;
  text-align: center;
  width: 100%;
  max-width: 400px;
}

/* 成功图标 */
.success-icon {
  margin-bottom: 40px;
}

.icon-circle.success {
  width: 100px;
  height: 100px;
  background-color: #4ECDC4;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-check {
  font-size: 48px;
  color: white;
  font-weight: bold;
}

/* 失败图标 */
.error-icon {
  margin-bottom: 40px;
}

.icon-circle.error {
  width: 100px;
  height: 100px;
  background-color: #ff4757;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-error {
  font-size: 48px;
  color: white;
  font-weight: bold;
}

/* 结果标题 */
.result-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 40px;
}

/* 欢迎信息 */
.welcome-message {
  font-size: 16px;
  color: #ff9500;
  text-align: center;
}

/* 错误信息 */
.error-message {
  font-size: 16px;
  color: #666;
  text-align: center;
  margin-bottom: 60px;
}

/* 底部按钮区域 */
.bottom-section {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  width: 100%;
  max-width: 400px;
  margin-top: 40px;
}

.retry-btn {
  width: 180px; /* 与主页面登记按钮宽度一致 */
  height: 40px; /* 与主页面登记按钮高度一致 */
  background-color: #4ECDC4;
  color: white;
  font-size: 14px; /* 与主页面登记按钮字体大小一致 */
  font-weight: bold;
  padding: 0; /* 移除padding，因为高度已固定 */
  border-radius: 20px; /* 与主页面登记按钮圆角一致 */
  border: none;
  box-shadow: 0 4px 12px rgba(78, 205, 196, 0.3); /* 添加与主页面一致的阴影 */
  transition: all 0.3s ease; /* 添加过渡效果 */
  display: flex; /* 添加flex布局 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

.retry-btn:active {
  transform: translateY(1px);
  box-shadow: 0 2px 8px rgba(78, 205, 196, 0.4);
}

.retry-btn::after {
  border: none;
}
